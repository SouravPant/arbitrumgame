# Arbitrum Tap Tap Game Environment Configuration
# Copy this file to .env and fill in your values

# Private key for deployment (keep this secret!)
PRIVATE_KEY=your_private_key_here

# Arbitrum RPC URLs
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc
ARBITRUM_SEPOLIA_RPC_URL=https://sepolia-rollup.arbitrum.io/rpc

# API Keys for verification
ARBISCAN_API_KEY=your_arbiscan_api_key_here

# Optional: Gas reporting
REPORT_GAS=true
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here

# Farcaster Mini App Configuration
FARCASTER_APP_ID=your_farcaster_app_id
FARCASTER_APP_SECRET=your_farcaster_app_secret

# Game Configuration
GAME_CONTRACT_ADDRESS=deployed_contract_address_here
ARBITRUM_CHAIN_ID=42161

# Database Configuration (for leaderboards)
DATABASE_URL=your_database_connection_string

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret_key
